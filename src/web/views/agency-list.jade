extends ./layout.jade


block jumbo
    .jumbotron
        .container
            h1 Agency Directory


block content
    - var route = '/agency'

    table.table.table-striped
        thead
            tr
                th Name
                th Address
                th City
                th Zip
                th State
                th Phone
        tbody
            for agency in agencies
                tr
                    td: a( href=route + '/' + agency.id ) #{agency.name}
                    td  #{agency.address}
                    td  #{agency.city}
                    td  #{agency.zip}
                    td  #{agency.state}
                    td  #{agency.phone}
