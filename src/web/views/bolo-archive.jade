extends layout


block jumbo
    .jumbotron
        .container
            h1 Be On the Lookout
            p Browse Archived BOLOs

block content
    include ./partials/global-alerts.jade

    if bolos && 0 === bolos.length
        p.lead No archived BOLOs.

    .row
        for bolo in bolos
            div.col-sm-6.col-md-4
                include ./partials/bolo-thumbnail.jade
                    .action
                        a.btn.btn-default(role="button" type="submit" class="restore-bolo" id=bolo.id) Restore
                        a.btn.btn-danger(role="button" type="submit" class="delete-bolo", id=bolo.id) Delete

    .row.text-center
        - var route = '/bolo/archive'
        include ./partials/paging.jade
