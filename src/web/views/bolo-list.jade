extends layout

block content
  h1 Bolos
  #bolos
  div.row
    for bolo in bolos
        div.col-sm-6.col-md-4

            div.thumbnail
                if bolo.data.attachments
                    - var keys = Object.keys( bolo.data.attachments )
                    img(src="/bolo/asset/" + bolo.data.id + "/" + keys[0] alt="" style="height:300px")
                div.caption
                    h3= bolo.data.category
                    p
                        if bolo.data.status
                            span.text-danger.strong=bolo.data.status
                            </br>
                        span.text-danger.strong="Updated on: " + bolo.data.lastUpdatedOn
                        </br>
                    p= "Author: " +  bolo.data.authorFName + " " +  bolo.data.authorLName
                    p
                         a.btn.btn-primary(href="/bolo/edit/" + bolo.data.id, role="button") Edit
                         a.btn.btn-default(href="/bolo/details/" + bolo.data.id, role="button") Details
                         a.btn.btn-danger(role="button", type="submit" class="archive-bolo", id=bolo.data.id) Archive
   #paging
   - var n = 1
   div.text-center
    ul.pagination
      while n < paging.pages
        -var page = n++
        if page == paging.currentPage
            li.active
                a(href="/bolo?page=" + page)= page
        else
            li
                a(href="/bolo?page=" + page)= page
