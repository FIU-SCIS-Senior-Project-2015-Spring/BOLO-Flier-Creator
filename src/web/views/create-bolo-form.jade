    +input_mx("video_url", "Video Link", "", false, bolo?bolo.videoLink:"", "url")
    +input_textarea("addition_info", "Additional Info", "", false, bolo?bolo.additional:"")
    +input_textarea("summary", "Summary", "", false, bolo?bolo.summary:"")
