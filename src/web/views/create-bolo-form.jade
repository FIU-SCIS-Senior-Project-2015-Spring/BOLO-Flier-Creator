include includes/mixins
extends layout

//- Template Mixins
mixin input_text(name, label, placeholder, required)
  .form-group
    label.control-label(for=name)= label
    input.form-control(name=name type="text" placeholder=placeholder)

mixin input_textarea(name, label, placeholder, required)
  .form-group
    label.control-label(for=name)= label
    textarea.form-control(name=name type="text" placeholder=placeholder)

mixin select_options(name, label, options, required)
  .form-group
    label.control-label(for=name)= label
    select.form-control(name=name)
      option(disabled selected) Select an option...
      each val in options
        +option(val)


block jumbo
  .jumbotron
    .container
      h1 Create a BOLO
      p Fill out the form and submit to create a new BOLO.

block content
  //- Dropdown Box Selections
  -
    var categories = [
      'ARSON', 'BURGLARY', 'DOMESTIC SECURITY', 'ESCAPE', 'FRAUD',
      'HOME INVASION', 'HOMICIDE', 'MISSING JUVENILE', 'MISSING PERSON',
      'NARCOTICS', 'NEED TO IDENTIFY', 'OFFICER SAFETY', 'PC TO ARREST',
      'ROBBERY', 'RUNAWAY', 'SEX OFFENSE', 'SITUATIONAL AWARENESS',
      'THEFT - AUTO', 'THEFT - BOAT', 'THEFT - GRAND', 'THEFT - PETIT',
      'WANTED', 'FIELD INTERVIEW', 'INFORMATION'
    ]

    var races = [
      'Hispanic', 'White', 'Asian', 'Black or African American',
      'American Indian or Alaska Native',
      'Native Hawaiian or Other Pacific Islander'
    ]

    var hair_colors = [
      'Black','Blonde','Red','Brown','Gray','White','Sandy','Bald (No hair)'
    ]


  //- Actual Form
  form#create-bolo-form(action="/bolo/create" enctype="multipart/form-data" method="post")
    +select_options("bolo_category", "Category", categories, true)
    +input_text("fname", "First Name", "", false)
    +input_text("lname", "Last Name", "", false)
    +input_text("dob", "Date of Birth (DD/MM/YYYY)", "DD/MM/YYYY", false)
    +input_text("dl_number", "Drivers License Number", "", false)
    +select_options("race", "Race", races, false)
    +select_options("sex", "Sex", ["Male", "Female"], false)
    +input_text("height", "Height - Feet-Inches (e.g. 05-09)", "e.g. 05-09", false)
    +input_text("weight", "Weight - Pounds", "", false)
    +select_options("hair_color", "Hair Color", hair_colors, false)
    +input_textarea("tattoos", "Tattoos", "", false)
    +input_text("last_know_address", "Last Known Address", "", false)

    .form-group
      label.control-label(for="image_upload") Image Attachment
      input(name="image_upload" type="file" accept="image/*")

    .form-group
      label.control-label(for="video_url") Video Link
      input.form-control(name="video_url" type="url")

    +input_textarea("addition_info", "Additional Info", "", false)
    +input_textarea("summary", "Summary", "", false)

    .form-group
      button.btn.btn-primary(type="submit" value="save") Submit
      button.btn.btn-default(type="submit" disabled=true value="preview") Preview
      button.btn.btn-default(type="submit" disabled=true value="pdf") PDF
