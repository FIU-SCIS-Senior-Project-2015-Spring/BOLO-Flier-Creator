include includes/mixins
extends layout

block jumbo
    .jumbotron
        .container
            h1 BOLO Version 3.0
            p Please log in to use the system.

block content
    each msg in messages
        +alert_info(msg)
    each err in error
        +alert_warning(err)
    form#login(action="/login" method="post")
        input(type="hidden" name="_csrf" value=loginToken)
        +input_text("username", "Username", "", true, "", "text")
        +input_text("password", "Password", "", true, "", "password")
        .form-group
             button.btn.btn-primary(type="submit" value="login") Login
